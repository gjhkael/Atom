<assembly>
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <includes>
                <include>README</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}/sbin/
            </directory>
            <outputDirectory>/sbin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}/bin/
            </directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}/conf/
            </directory>
            <outputDirectory>/conf</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}/apps/
            </directory>
            <outputDirectory>/apps</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ${project.parent.basedir}/assembly/target/${atom.jar.dir}
            </directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>${atom.jar.basename}</include>
            </includes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
        </dependencySet>
    </dependencySets>

</assembly>
